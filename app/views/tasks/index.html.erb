<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Priority</th>
      <th>Due</th>
      <th>Messages</th>
      <th>Percentage</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.priority %></td>
        <td><%= task.due %></td>
        <td><%= task.messages %></td>
        <td><%= task.percentage %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
